@inherits LayoutComponentBase

@inject IConfiguration config

@{
    var title = config.GetValue<string>("PageTitle");
    var fullTitle = string.IsNullOrEmpty(title) ? "HTLVB TdoT Guide" : $"HTLVB TdoT Guide - {title}";
}

<div class="main">
    <div class="flex justify-between items-center bg-main p-8 text-white">
        <span class="text-2xl md:text-4xl">@fullTitle</span>
        <LoginDisplay />
    </div>

    <div class="p-4">
        @Body
    </div>
</div>
